<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/registerActivity">

    <activity
        android:id="@+id/registerActivity"
        android:name="com.pruebaandroid.proyectoandroidfirebase.RegisterActivity"
        android:label="activity_register"
        tools:layout="@layout/activity_register" >
        <action
            android:id="@+id/action_register_to_main"
            app:destination="@id/mainActivity" />
    </activity>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.pruebaandroid.proyectoandroidfirebase.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>